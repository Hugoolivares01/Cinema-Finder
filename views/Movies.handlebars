    <h4> currently unknown</h4>
</div>

<h1>All movies</h1>
<div>
    {{#each movies}}
    <div class="row mb-2">
        <div class="col-md-8">
            <h4>{{genre}}, {{name}},{{review}}, {{rating}}
                <div>
                    <a href="" id="modaldisplay"> <img id="modalimage" src={{image_url}}></a>
                </div>
            </h4>
            <p id="pictureid" style="display: none;">{{id}}</p>
        </div>

    </div>
    {{/each}}

    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close-btn">&times;</span>
            <img src="" alt="" id="modalImage">
            <button id="saveMovie">Save Movie</button>
        </div>
    </div>
</div>

<h1>Movie Review</h1>

<form id="reviewForm">
    <div>
        <label for="movieName">Movie Name:</label>
        <input type="text" id="movieName" name="movieName" required>
    </div>
    <div>
        <label for="review">Review (1-10):</label>
        <input type="number" id="review" name="review" min="1" max="10" required>
    </div>
    <button type="submit">Submit Review</button>
</form>

<h1>My movies</h1>
<div>
    {{#each savedMovies}}
    <div class="row mb-2">
        <div class="col-md-8">
            <h4>{{genre}}, {{name}}, {{review}}, {{rating}}</h4>
            <div><img id="savedmovie" src={{image_url}} alt="Movie Poster"></div>
            {{!-- puts the id of the movie with "display none" so we can get it--}}
            <p style="display: none;">{{movie_id}}</p>
        </div>
        <button id="deleteMovie">Delete Movie</button>
    </div>
    {{/each}}
</div>
<script src="/js/modal.js"></script>